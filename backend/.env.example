# Backend Configuration for NGO Donation System

# Server port
PORT=5000

# MongoDB Connection String
# Replace with your actual MongoDB URI
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/ngo_system?retryWrites=true&w=majority

# JWT Configuration
# Set a strong random secret (do NOT use a simple string)
JWT_SECRET=your_strong_random_secret_key_here_minimum_32_characters

# JWT Token Expiration Time
JWT_EXPIRES_IN=7d

# Payment Gateway Secret (for callback verification)
PAYMENT_GATEWAY_SECRET=your_payment_gateway_secret_key_here

# Admin Account Credentials (for testing/demo purposes)
# Replace with your desired admin credentials
ADMIN_EMAIL=admin@ngo.com
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@ngo.com
ADMIN_PASSWORD=strong_password_here
